style.
    #boardContainer {
    }
    svg.board {
        width: 500px;
        height: 500px;
        display: inline-block;
        position: relative;
        background-image: url(/images/wood.jpg);
        border-style: inset;
        border-color: brown;
        border-width: 5px;
        border-radius: 3px;
    }
    .gridVertex line {
        stroke: #000000;
        stroke-width: 2;
    }
    svg.board .gridVertex {
        position: absolute;
        display: inline-block;
        overflow: visible;
    }
- var colors = ['black', 'white'];
- var size = locals.board.get('size');
- var squareWidth = 100 / size + '%';
- for ( var i = 0; i < size; i++ ) {
    - var percentX = 100 * i / size + '%';
    - for (var j = 0; j < size; j++) {
        - var percentY = 100 * j / size + '%';
        svg.gridVertex(
            style="top: #{percentY}; left: #{percentX};",
            width="#{squareWidth}",
            height="#{squareWidth}",
            data-x="#{i}",
            data-y="#{j}")
            // draw the piece if it is present
            // ----- template code here
            // draw the lines for each grid item
            - if (i != 0)
                line(
                    x1="50%",
                    y1="50%",
                    x2="-0.5%",
                    y2="50%")
            - if (i + 1 != size)
                line(
                    x1="50%",
                    y1="50%",
                    x2="100.5%",
                    y2="50%")
            - if (j != 0)
                line(
                    x1="50%",
                    y1="50%",
                    x2="50%",
                    y2="-0.5%")
            - if (j + 1 != size)
                line(
                    x1="50%",
                    y1="50%",
                    x2="50%",
                    y2="100.5%")
            // draw the piece for this position
            - if (locals.board.grid[i][j])
                circle(
                    fill="#{colors[(locals.board.grid[i][j] - 1)]}",
                    cx="50%",
                    cy="50%",
                    r="48%")
    - }
- }
            


